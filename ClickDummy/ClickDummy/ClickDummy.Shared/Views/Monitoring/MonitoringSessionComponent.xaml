<UserControl
    x:Class="ClickDummy.Shared.Views.Monitoring.MonitoringSessionComponent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:extensions="using:Uno.Material.Extensions"
    mc:Ignorable="d" Height="340" Background="#FFC7C7C7" BorderBrush="#FF494949" Width="1330">

    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Padding="10" BorderBrush="#FFAEAEAE">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <!--<Rectangle Fill="{StaticResource UnoPurpleColorBrush}" Grid.ColumnSpan="2" Margin="0"  />
        <Rectangle Fill="{StaticResource UnoGreenColorBrush}"
              Grid.Column="2" Margin="0,0,0,0" Grid.RowSpan="2" />
        <Rectangle Fill="{StaticResource UnoRedColorBrush}"
              Grid.Column="3" Margin="0,0,0,0" Grid.RowSpan="2" Grid.ColumnSpan="2" />-->

        <Grid Margin="0,0,0,0" BorderBrush="#FF3A3A3A" BorderThickness="2,2,2,2">
            <StackPanel HorizontalAlignment="Left"
            Orientation="Vertical">
                <Rectangle Fill="{StaticResource UnoBlueColorBrush}"
              Width="50"
              Height="85"/>
                <Rectangle Fill="{StaticResource UnoGreenColorBrush}"
              Width="50"
              Height="85" />
                <Rectangle Fill="{StaticResource UnoRedColorBrush}"
              Width="50"
              Height="85"
                           />
            </StackPanel>

            <!--<StackPanel Spacing="20">
                <Button Style="{StaticResource MaterialFabStyle}">
                    <extensions:ControlExtensions.Icon>
                        <SymbolIcon Symbol="Add" />
                    </extensions:ControlExtensions.Icon>
                </Button>
                <Button Style="{StaticResource MaterialSecondaryFabStyle}">
                    <extensions:ControlExtensions.Icon >
                        <SymbolIcon Symbol="Add" />
                    </extensions:ControlExtensions.Icon>
                </Button>
                <Button Style="{StaticResource MaterialFabStyle}"
           IsEnabled="False">
                    <extensions:ControlExtensions.Icon >
                        <SymbolIcon Symbol="Add" />
                    </extensions:ControlExtensions.Icon>
                </Button>
            </StackPanel>-->

            <TextBlock Text="A"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top" />
        </Grid>

        <Grid Background="#66ACACAC" Margin="0,0,0,0" Grid.Column="1" BorderBrush="#FA3A3A3A" BorderThickness="2,2,2,2">
            <TextBlock Text="Sonden Info / Session Info"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top" />
        </Grid>

        <Grid Background="#ffACACAC" Margin="0,0,0,0" Grid.Column="2" BorderBrush="#FF3A3A3A" BorderThickness="2,2,2,2">
            <Pivot HorizontalAlignment="Left" VerticalAlignment="Top"  FontSize="6" >
                <PivotItem Header="Live">
                    <Border Background="{StaticResource MaterialOnBackgroundColor}"
                        Width="auto"      
                        HorizontalAlignment="Left" >
                        <Image Source="ms-appx:///Assets/wide310x150logo.scale-200.png"  Width="400"
                           Stretch="Fill" Margin="10,0,10,0" />
                    </Border>
                </PivotItem>

                <PivotItem Header="Post-Live">
                    <Border Background="{StaticResource MaterialOnBackgroundColor}"   
                        Width="auto"    
                        HorizontalAlignment="Left" >
                        <Image Source="ms-appx:///Assets/wide310x150logo.scale-200.png"  
                           Stretch="Uniform" Margin="10,0,10,0" />
                    </Border>
                </PivotItem>
                <PivotItem Header="Detected">
                    <Border Background="{StaticResource MaterialOnBackgroundColor}"     
                        Width="auto"     
                        HorizontalAlignment="Left" >
                        <Image Source="ms-appx:///Assets/wide310x150logo.scale-200.png"
                           Stretch="Uniform" Margin="10,0,10,0" />
                    </Border>
                </PivotItem>

                <PivotItem Header="Segmentation">
                    <Border Background="{StaticResource MaterialOnBackgroundColor}"    
                        Width="auto"  
                        HorizontalAlignment="Left" >
                        <Image Source="ms-appx:///Assets/wide310x150logo.scale-200.png"  
                           Stretch="Uniform" Margin="10,0,10,0" />
                    </Border>
                </PivotItem>
            </Pivot>

            <TextBlock Text="Image Viewer"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top" />
            <Rectangle HorizontalAlignment="Right" Height="37" Margin="0,0,0,0" Fill="Gray" VerticalAlignment="Top" Width="37" />
        </Grid>

        <Grid Background="#66ACACAC" Grid.Column="3" BorderBrush="#FF3A3A3A" BorderThickness="2,2,2,2">
            <Pivot HorizontalAlignment="Left" VerticalAlignment="Top"  FontSize="6" >
                <PivotItem Header="Graph Typ1"  FontSize="6">
                    <Border Background="{StaticResource MaterialOnBackgroundColor}"
                        Width="auto"      
                        HorizontalAlignment="Left" >
                        <Image Source="ms-appx:///Assets/wide310x150logo.scale-200.png"  Width="400"
                           Stretch="Fill" Margin="10,0,10,0" />
                    </Border>
                </PivotItem>

                <PivotItem Header="Graph Typ2">
                    <Border Background="{StaticResource MaterialOnBackgroundColor}"   
                        Width="auto"    
                        HorizontalAlignment="Left" >
                        <Image Source="ms-appx:///Assets/wide310x150logo.scale-200.png"  
                           Stretch="Uniform" Margin="10,0,10,0" />
                    </Border>
                </PivotItem>
                <PivotItem Header="Graph Typ3">
                    <Border Background="{StaticResource MaterialOnBackgroundColor}"     
                        Width="auto"     
                        HorizontalAlignment="Left" >
                        <Image Source="ms-appx:///Assets/wide310x150logo.scale-200.png"
                           Stretch="Uniform" Margin="10,0,10,0" />
                    </Border>
                </PivotItem>
            </Pivot>

            <TextBlock Text="Graph Viewer"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top" />
            <Rectangle HorizontalAlignment="Right" Height="37" Fill="#FF403B3B" VerticalAlignment="Top" Width="38" />
        </Grid>

        <Grid Background="{StaticResource UnoBlueColorBrush}" Margin="0,0,0,0" Grid.Column="4" BorderBrush="#FF3A3A3A" BorderThickness="2,2,2,2">
            <StackPanel HorizontalAlignment="Left"
            Orientation="Vertical">
                <Rectangle Fill="{StaticResource UnoRedColorBrush}"
              Width="50"
              Height="65" />
                <Rectangle Fill="{StaticResource UnoGreenColorBrush}"
              Width="50"
              Height="65" />
                <Rectangle Fill="{StaticResource UnoBlueColorBrush}"
              Width="50"
              Height="65" />
                <Rectangle Fill="{StaticResource UnoPurpleColorBrush}"
              Width="50"
              Height="60" />
            </StackPanel>

            <TextBlock Text="B"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top" />
        </Grid>

        <Grid Margin="0,0,0,0" Grid.Column="5" BorderBrush="#FF3A3A3A" BorderThickness="2,2,2,2">
            <StackPanel HorizontalAlignment="Left"
            Orientation="Vertical">
                <Rectangle Fill="{StaticResource UnoBlueColorBrush}"
              Width="50"
              Height="65" />
                <Rectangle Fill="{StaticResource UnoPurpleColorBrush}"
              Width="50"
              Height="65" />
                <Rectangle Fill="{StaticResource UnoGreenColorBrush}"
              Width="50"
              Height="65" />
                <Rectangle Fill="{StaticResource UnoRedColorBrush}"
              Width="50"
              Height="60" />
            </StackPanel>

            <TextBlock Text="C"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top" />
        </Grid>
        <Grid Grid.Row="1" Grid.ColumnSpan="6" Margin="0"  BorderBrush="#FF3A3A3A" BorderThickness="2,2,2,2" Background="#66ACACAC" >
            <TextBlock Text="Timeline Slider"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top"
                       Margin="9"/>
            <Slider Value="33" Width="auto" Minimum="0" Maximum="100" Padding="10,0,10,0" Margin="0,-5,0,0" />
            <Slider Value="17" Width="auto" Minimum="0" Maximum="100" Padding="10,0,10,0" Margin="0,10,0,0" />
        </Grid>
    </Grid>
</UserControl>
